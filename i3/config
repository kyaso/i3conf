##################################################################


########################## POWER MENU ############################
# Source: https://wiki.archlinux.org/title/i3#Shutdown.2C_reboot.2C_lock_screen

set $suspend $HOME/i3conf/power/suspend.sh
set $poweroff $HOME/i3conf/power/poweroff.sh
set $reboot $HOME/i3conf/power/reboot.sh

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $suspend, mode "default"
    bindsym r exec --no-startup-id $reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $poweroff, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
##################################################################


