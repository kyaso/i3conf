bindsym Control+$mod_alt+l exec $lock

# Middle mouse to kill window
bindsym --release button2 kill

# Cycle workspaces
bindsym $mod+o workspace next
bindsym $mod+i workspace prev

# Kind of Alt-TAB
bindsym --release $mod_alt+Tab workspace back_and_forth

# Power menu (lock, shutdown, reboot...)
bindsym Control+$mod_alt+Delete mode "$mode_system"
